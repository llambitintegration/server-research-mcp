# =============================================================================
# LLM Configuration
# =============================================================================
# Choose your LLM provider: 'anthropic' or 'openai'
LLM_PROVIDER=anthropic

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Available models: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
LLM_MODEL=claude-3-haiku-20240307

# OpenAI Configuration (if using OpenAI)
# OPENAI_API_KEY=your_openai_api_key_here
# LLM_MODEL=gpt-4o-mini

# =============================================================================
# Zotero Configuration (Required for paper extraction)
# =============================================================================
ZOTERO_API_KEY=your_zotero_api_key_here
ZOTERO_LIBRARY_ID=your_library_id_here
# Library type: 'user' or 'group'
ZOTERO_LIBRARY_TYPE=user

# =============================================================================
# Obsidian Configuration
# =============================================================================
# Path to your Obsidian vault (absolute path recommended)
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
# Subfolder for papers within the vault
OBSIDIAN_PAPERS_FOLDER=Papers

# =============================================================================
# MCP Server Configuration (Optional - for advanced features)
# =============================================================================
# Enable/disable specific MCP servers
ENABLE_MEMORY_SERVER=true
ENABLE_SEQUENTIAL_THINKING=true
ENABLE_CONTEXT7=true
ENABLE_FILESYSTEM_SERVER=true
ENABLE_ZOTERO_MCP=true
ENABLE_OBSIDIAN_MCP=true

# MCP Server URLs (if using remote servers)
# MCP_MEMORY_URL=http://localhost:8000
# MCP_SEQUENTIAL_URL=http://localhost:8001
# MCP_CONTEXT7_URL=http://localhost:8002

# =============================================================================
# Processing Configuration
# =============================================================================
# Maximum number of papers to process in parallel
MAX_PARALLEL_PAPERS=3

# Enable/disable specific agents (for testing)
ENABLE_HISTORIAN=true
ENABLE_RESEARCHER=true
ENABLE_ARCHIVIST=true
ENABLE_PUBLISHER=true

# Output formats (comma-separated: markdown,json,bibtex)
OUTPUT_FORMATS=markdown,json

# =============================================================================
# Advanced Configuration
# =============================================================================
# Enable debug mode
DEBUG=false

# Cache directory for temporary files
CACHE_DIR=./cache

# Maximum retries for failed operations
MAX_RETRIES=3

# Timeout for API calls (seconds)
API_TIMEOUT=30

# Enable dry run mode (no files created)
DRY_RUN=false